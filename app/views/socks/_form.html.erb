<div class="lost_form">
    <%= form_for(@sock) do |f| %>
    <% if @sock.errors.any? %>
    <div class= "error_messages">
      <h2> Form is invalid </h2>
      <ul>
        <% for message in @sock.errors.full_messages %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <h1>REPORT A MISSING SOCK:</h1>
      <%= f.label :size, "Size:" %>
      <select name="sock[size]">
        <option value="baby">BABY</option>
        <option value="small">SMALL</option>
        <option value="medium">MEDIUM</option>
        <option value="large">LARGE</option>
        <option value="giant">GIANT</option>
      </select>
    <%= f.label :color, "Color:"%>
    <%= f.text_field :color %>
    <%= f.label :distinguishing_markings, "Distinguishing Markings:" %>
    <%= f.text_field :distinguishing_markings %>
    <td id='report'><%=f.submit "REPORT" %>    
  <% end %>
</div>